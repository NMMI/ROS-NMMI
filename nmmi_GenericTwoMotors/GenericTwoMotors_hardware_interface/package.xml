<package format="2">
  <name>generictwomotors_hardware_interface</name>
  <version>2.1.1</version>
  <description>
    This package contains the hardware interface for a Generic Two Motors device.
  </description>
  <author>Centro "E. Piaggio"</author>
  <maintainer email="info@naturalmachinemotioninitiative.com">NMMI</maintainer>
  <license>BSD 3-Clause</license>

  <buildtool_depend>catkin</buildtool_depend>

  <depend>roscpp</depend>
  <depend>control_toolbox</depend>
  <depend>hardware_interface</depend>
  <depend>transmission_interface</depend>
  <depend>qb_device_hardware_interface</depend>
  <depend>nmmi_srvs</depend>

  <export>
    <hardware_interface plugin="${prefix}/plugin.xml"/>
  </export>

  <!--TODO: <test_depend>gtest</test_depend>-->
  <doc_depend>doxygen</doc_depend>
</package>